PKG_CFLAGS=@cflags@ $(SHLIB_OPENMP_CFLAGS) -std=c99 -O3 -pipe -Wall -pedantic -flto
PKG_LIBS=@libs@ $(SHLIB_OPENMP_CFLAGS)

all: $(SHLIB)
	mv $(SHLIB) datatable$(SHLIB_EXT)
	if [ "$(OS)" != "Windows_NT" ] && [ `uname -s` = 'Darwin' ]; then install_name_tool -id datatable$(SHLIB_EXT) datatable$(SHLIB_EXT); fi

clean:
	rm -f $(SHLIB) $(OBJECTS)
